<% @websites.each do |website| %>
    <div class="content>
        <div class="row">
            <div class="view view-fifth">
                <%= image_tag(website.image_url) %>
                <div class="mask">
                    <h2><%= website.title %></h2>
                    <p><%= sanitize(website.description) %></p>
                    <a href="<%= website.link %>" class="info">查看</a>
                </div> <%# --- end mask--- %>
            </div> <%# --- end view view-fifth --- %>
        </div> <%# ---end row --- %>
    </div> <%# --- end content --- %>
<% end %>
